<div class="random-beer-container">
  <div class="left-section">
    <img src="{{ image_url }}" alt="">
  </div>

  <div class="right-section">
     <h2>{{ name }}</h2>
    <h4>{{ tagline }}</h4>
    <p>{{ description }}</p>

    <h3>Food pairing</h3>
    <ul>
      {{#each food_pairing}}
        <li>{{ this }}</li>
      {{/each}}
    </ul>

    <h3>Brewer Tips: </h3>
    <span>{{ brewers_tips }}</span>
  </div>

</div>
